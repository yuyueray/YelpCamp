
<% include ../partials/header.ejs%>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">YelpCamp</p>
                <div class="list-group">
                    <li class="list-group-item active">Info1</li>
                    <li class="list-group-item">Info1</li>
                    <li class="list-group-item">Info1</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="imd-responsive" src="<%= thisCamp.image %>" alt="">
                    <div class="caption-full">
                        <h4 class="pull-right">
                            $233/night
                        </h4>
                        <h4>
                            <a href=""></a>
                            <%= thisCamp.name %>
                        </h4>
                        <p>
                            <%= thisCamp.description%>
                        </p>
                        <p>
                            <em>
                                Submitted by
                                <%= thisCamp.author.username %>
                            </em>
                        </p>
                        <% if (currentUser && thisCamp.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-warning" href="/campgrounds/<%= thisCamp._id %>/edit">Edit</a>
                        <form class="delete-form" action="/campgrounds/<%= thisCamp._id %>?_method=DELETE" method="post">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                        <% }%>
                    </div>
                </div>
                <div class="well">
                    <div>
                        <a class="btn btn-success" href="/campgrounds/<%= thisCamp._id %>/comments/new">Add New Comments</a>
                    </div>
                    <hr>
                    <% thisCamp.comments.forEach( function(comment) { %>
                        <div class="row">
                            <div class="col-md-12">
                                <%= comment.author.username %>
                                <span class="pull-right"> 10天前 </span>
                                <p>
                                    <%= comment.text%>
                                </p>
                                <% if (currentUser && comment.author.id.equals(currentUser._id)) { %>
                                    <a class="btn btn-xs btn-warning" href="/campgrounds/<%= thisCamp._id %>/comments/<%= comment._id%>/edit">
                                        Edit
                                    </a>
                                    <form class="delete-form" action="/campgrounds/<%= thisCamp._id %>/comments/<%= comment._id%>?_method=DELETE" method="POST">
                                        <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                                    </form>
                                <% }%>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>


<% include ../partials/footer.ejs%>
