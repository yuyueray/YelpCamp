<% include ../partials/header.ejs%>



    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>This is campgrounds page</h1>
                <p>view all camps here</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Camp</a>
                </p>
                <form action="/campgrounds" method="GET" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Campground search..." class="form-control">
                        <input type="submit" value="Search" class="btn btn-default">
                    </div>
                </form>
            </div>
        </header>

        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <div class="col-md-12">
                <% if(noMatch !== null) { %>
                    <h3><%= noMatch %></h3>
                <% } %>
            </div>
            <% camps.forEach(function (c) { %>
            <div class="col col-sm-6 col-md-3">
                <div class="img-thumbnail">
                    <img src="<%= c.image %>" alt="">
                </div>
                <caption class="h4"><%= c.name %></caption>
                <p>
                    <a href="/campgrounds/<%= c._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
            <% }); %>
        </div>

    </div>


<% include ../partials/footer.ejs%>
