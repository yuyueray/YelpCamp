<% include ../partials/header.ejs%>



    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>This is campgrounds page</h1>
                <p>view all camps here</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/campgrounds/new">add new camp</a>
                </p>
            </div>
        </header>

        <div class="row text-center justify-content-around">
            <% camps.forEach(function (c) { %>
            <div class="col col-sm-6 col-md-3">
                <div class="img-thumbnail">
                    <img src="<%= c.image %>" alt="">
                </div>
                <caption class="h4"><%= c.name %></caption>
                <p>
                    <a href="/campgrounds/<%= c._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
            <% }); %>
        </div>

    </div>


<% include ../partials/footer.ejs%>
