
<% include ../partials/header.ejs%>

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="">
            <h1>Edit <%= curCamp.name %> camp</h1>
        </div>
        <div class="">
            <form action="/campgrounds/<%= curCamp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campInfo[campName]" value="<%= curCamp.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campInfo[campImage]" value="<%= curCamp.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campInfo[campDesc]" value="<%= curCamp.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
        <a href="/campgrounds/<%= curCamp._id %>">go back</a>
    </div>
</div>


<% include ../partials/footer.ejs%>