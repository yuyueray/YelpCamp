
<% include ../partials/header.ejs%>

<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="">
      <h1>Create a new camp</h1>
    </div>
    <div class="">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="campName" placeholder="name">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="campPrice" placeholder="price" min="0.00" step="0.01">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campImage" placeholder="image url">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campDesc" placeholder="description">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
    </div>
    <a href="/campgrounds">Go back</a>
  </div>
</div>


