
<% include ../partials/header.ejs%>

<div class="row justify-content-center">
  <div class="col-md-12 text-center">
    <h1>Create a New Campground</h1>
  </div>
  <div class="col-xs-12 col-md-6 col-lg-4">
    <form action="/campgrounds" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="campName" id="name" placeholder="Yosemite" required>
      </div>
      <div class="form-group">
        <label for="image">Image File</label>
        <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
      </div>
      <div class="form-group">
        <label for="cost">Cost</label>
        <input class="form-control" type="number" name="campPrice" id="cost" placeholder="3.14" step="0.01" min="0" required>
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input class="form-control" type="text" name="description" id="description" placeholder="Californiaâ€™s Sierra Nevada mountains.">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
      </div>
    </form>
    <a href="/campgrounds">Go Back</a>
  </div>
</div>

<% include ../partials/footer.ejs%>


