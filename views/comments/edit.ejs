                    <input class="form-control" type="text" name="comment[text]" value="<%= curComment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
        <a href="/campgrounds/<%= campground_id %>">go back</a>
    </div>
</div>


