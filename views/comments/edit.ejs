<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="">
            <h1>Edit Comment</h1>
        </div>
        <div class="">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= curComment._id%>?_method=PUT" method="POST">
